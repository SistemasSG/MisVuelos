<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MisVuelos.Views.ReservarPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Reserva Tu Vuelo" />
            <Entry x:Name="nombre" Placeholder="Nombre"></Entry>
            <Entry x:Name="cedula" Placeholder="Cedula" Keyboard="Numeric"></Entry>
            <Entry x:Name="edad" Placeholder="Edad" Keyboard="Numeric"></Entry>
            <Entry x:Name="asientos" Placeholder="Cantidad de Asientos" Keyboard="Numeric"></Entry>
            <Button x:Name="reservar" Clicked="reservar_Clicked" Text="Reservar"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>